<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Classes"
                android:textSize="20sp"
                android:fontFamily="@font/medium"
                android:textColor="@color/foreground" />

            <TextView
                android:id="@+id/tv_class_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 of 0 classes"
                android:textSize="14sp"
                android:textColor="@color/muted_foreground"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Class"
            app:icon="@drawable/ic_add"
            app:iconSize="16dp"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

    <!-- Search and Filter Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Search Bar -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:startIconDrawable="@drawable/ic_search"
                app:startIconTint="@color/muted_foreground"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search classes, instructors, locations..." />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Advanced Filters Expandable -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_advanced_filters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/border"
                app:cardBackgroundColor="@color/background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_filter"
                        android:tint="@color/muted_foreground" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Advanced Filters"
                        android:textSize="14sp"
                        android:textColor="@color/foreground" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_active_filters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active"
                        android:visibility="gone"
                        style="@style/Widget.Material3.Chip.Assist" />

                    <ImageView
                        android:id="@+id/iv_filter_arrow"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_chevron_down"
                        android:tint="@color/muted_foreground" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Expandable Filter Content -->
            <LinearLayout
                android:id="@+id/layout_filters_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <!-- Day Filter -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Filter by day"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/spinner_day_filter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Type Filter -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Filter by type"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/spinner_type_filter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Difficulty Filter -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Filter by difficulty"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/spinner_difficulty_filter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Clear Filters Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_clear_filters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clear Filters"
                    app:icon="@drawable/ic_x"
                    app:iconSize="16dp"
                    android:visibility="gone"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Classes RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_classes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layout_empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="64dp"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="32dp"
            app:cardBackgroundColor="@color/primary_10">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_calendar"
                android:tint="@color/primary" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_empty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Classes Yet"
            android:textSize="20sp"
            android:fontFamily="@font/medium"
            android:textColor="@color/foreground"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_empty_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get started by creating your first yoga class. You can add schedules, set capacity, and manage everything from here."
            android:textSize="14sp"
            android:textColor="@color/muted_foreground"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            android:maxWidth="320dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_first_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create First Class"
            app:icon="@drawable/ic_add"
            app:iconSize="20dp"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

    <!-- No Results State -->
    <LinearLayout
        android:id="@+id/layout_no_results"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="48dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_search"
            android:tint="@color/muted_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Results Found"
            android:textSize="18sp"
            android:fontFamily="@font/medium"
            android:textColor="@color/foreground"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try adjusting your search criteria"
            android:textSize="14sp"
            android:textColor="@color/muted_foreground"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear Filters"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>

</LinearLayout>