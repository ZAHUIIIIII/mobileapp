<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Title and Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Title Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tv_class_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Flow Yoga"
                        android:textSize="18sp"
                        android:fontFamily="@font/medium"
                        android:textColor="@color/foreground" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_difficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beginner"
                        android:textSize="10sp"
                        android:visibility="gone"
                        style="@style/Widget.Material3.Chip.Assist" />

                </LinearLayout>

                <!-- Schedule Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/ic_calendar"
                            android:tint="@color/muted_foreground" />

                        <TextView
                            android:id="@+id/tv_day_of_week"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monday"
                            android:textSize="14sp"
                            android:textColor="@color/muted_foreground" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/ic_clock"
                            android:tint="@color/muted_foreground" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18:00"
                            android:textSize="14sp"
                            android:textColor="@color/muted_foreground" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Price Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â£25"
                    android:textSize="20sp"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/primary" />

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60 min"
                    android:textSize="14sp"
                    android:textColor="@color/muted_foreground" />

            </LinearLayout>

        </LinearLayout>

        <!-- Details Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Capacity -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_users"
                    android:tint="@color/muted_foreground" />

                <TextView
                    android:id="@+id/tv_capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capacity: 12"
                    android:textSize="14sp"
                    android:textColor="@color/foreground" />

            </LinearLayout>

            <!-- Location -->
            <LinearLayout
                android:id="@+id/layout_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_map_pin"
                    android:tint="@color/muted_foreground" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Main Studio"
                    android:textSize="14sp"
                    android:textColor="@color/foreground"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Instructor -->
        <LinearLayout
            android:id="@+id/layout_instructor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_star"
                android:tint="@color/muted_foreground" />

            <TextView
                android:id="@+id/tv_instructor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructor: Sarah Johnson"
                android:textSize="14sp"
                android:textColor="@color/foreground" />

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A flowing sequence of poses to build strength and flexibility"
            android:textSize="14sp"
            android:textColor="@color/muted_foreground"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Instance Stats -->
        <LinearLayout
            android:id="@+id/layout_instance_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/accent_50"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_total_instances"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 total instances"
                android:textSize="12sp"
                android:textColor="@color/muted_foreground" />

            <TextView
                android:id="@+id/tv_upcoming_instances"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 upcoming"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:fontFamily="@font/medium"
                android:layout_marginStart="16dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/border">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_manage_instances"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Instances"
                app:icon="@drawable/ic_calendar"
                app:iconSize="16dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:text="Edit"
                app:icon="@drawable/ic_edit"
                app:iconSize="16dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:icon="@drawable/ic_trash"
                app:iconSize="16dp"
                app:iconTint="@color/destructive"
                app:strokeColor="@color/destructive_20"
                android:textColor="@color/destructive"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>