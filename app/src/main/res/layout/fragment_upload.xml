<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cloud Sync"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/foreground" />

            <TextView
                android:id="@+id/tvNetworkStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Network: Checking..."
                android:textSize="13sp"
                android:textColor="@color/muted_foreground"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Stats Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingBottom="12dp">

            <!-- Sync Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTotalSyncs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Syncs"
                        android:textSize="12sp"
                        android:textColor="@color/muted_foreground"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Network Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ivNetworkIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_network_connected"
                        app:tint="@color/muted_foreground"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Network Status"
                        android:textSize="12sp"
                        android:textColor="@color/muted_foreground" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Main Sync Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/card"
            app:strokeColor="@color/border"
            app:strokeWidth="1dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Sync Status Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/ivSyncStatus"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_cloud"
                        app:tint="@color/muted_foreground"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sync Status"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/foreground" />

                    <TextView
                        android:id="@+id/tvLastSync"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Never"
                        android:textSize="13sp"
                        android:textColor="@color/muted_foreground" />

                </LinearLayout>

                <!-- Data Summary -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/input_background"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tvDataSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Courses: 0 | Instances: 0 | Unsynced: 0"
                        android:textSize="14sp"
                        android:textColor="@color/foreground"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvDataVolume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data Size: 0KB"
                        android:textSize="13sp"
                        android:textColor="@color/muted_foreground"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Progress Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Syncing..."
                            android:textSize="13sp"
                            android:textColor="@color/muted_foreground" />

                        <TextView
                            android:id="@+id/tvProgressText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="13sp"
                            android:textColor="@color/primary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        app:trackCornerRadius="4dp"
                        app:indicatorColor="@color/primary"
                        app:trackColor="@color/input_background"
                        tools:progress="75" />

                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:paddingHorizontal="4dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSync"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Sync Now"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_cloud"
                        app:iconSize="18dp"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12dp"
                        android:backgroundTint="@color/primary"
                        android:textColor="@color/primary_foreground"
                        app:cornerRadius="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRetry"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Retry"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_refresh"
                        app:iconSize="18dp"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12dp"
                        android:backgroundTint="@color/background"
                        android:textColor="@color/primary"
                        app:strokeColor="@color/primary"
                        app:strokeWidth="1dp"
                        app:cornerRadius="8dp"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Auto Sync Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/input_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_clock"
                        app:tint="@color/muted_foreground"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Auto Sync"
                        android:textSize="14sp"
                        android:textColor="@color/foreground" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchAutoSync"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Sync History Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recent Syncs"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/foreground" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textSize="12sp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    style="@style/Widget.YogaCourse.Button.Outline" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSyncHistory"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/input_background"
                android:clipToPadding="false"
                android:padding="8dp"
                tools:listitem="@layout/item_sync_history" />

        </LinearLayout>

        <!-- Database Management Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/card"
            app:strokeColor="@color/warning"
            app:strokeWidth="1dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Database Management Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_alert_triangle"
                        app:tint="@color/warning"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Database Management"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/foreground" />

                </LinearLayout>

                <!-- Warning Text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚠️ Database operations will permanently delete data. This action cannot be undone."
                    android:textSize="13sp"
                    android:textColor="@color/warning"
                    android:background="@color/warning_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="2dp" />

                <!-- Database Management Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDatabaseManagement"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="Database Management"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_settings"
                        app:iconSize="18dp"
                        app:iconGravity="textStart"
                        app:iconPadding="10dp"
                        app:cornerRadius="8dp"
                        android:backgroundTint="@color/background"
                        android:textColor="@color/foreground"
                        app:strokeColor="@color/border"
                        app:strokeWidth="1dp"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnResetAllData"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="Reset All Data"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_trash"
                        app:iconSize="18dp"
                        app:iconGravity="textStart"
                        app:iconPadding="10dp"
                        app:cornerRadius="8dp"
                        android:backgroundTint="@color/danger"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_empty_state_icon"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_cloud"
                    app:tint="@color/primary" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Sync History"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/foreground"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start syncing your data to see history here"
                android:textSize="14sp"
                android:textColor="@color/muted_foreground"
                android:gravity="center"
                android:maxWidth="280dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>