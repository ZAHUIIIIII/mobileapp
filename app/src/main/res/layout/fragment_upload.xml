<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_primary"
        android:title="Upload Data"
        android:titleTextColor="@color/md_theme_onPrimary"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        app:titleCentered="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/md_theme_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_upload"
                        app:tint="@color/md_theme_primary"
                        android:contentDescription="Upload icon"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload to Cloud"
                        android:textAppearance="?attr/textAppearanceHeadlineMedium"
                        android:textColor="@color/md_theme_primary"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload all course and instance data to the cloud service."
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="@color/md_theme_onSurfaceVariant"
                        android:textSize="14sp"
                        android:layout_marginBottom="24dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUpload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start Upload"
                        style="@style/Widget.Material3.Button"
                        app:backgroundTint="@color/md_theme_primary"
                        app:cornerRadius="12dp"
                        android:textColor="@color/md_theme_onPrimary"
                        android:paddingVertical="12dp"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp"/>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ready to upload"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/md_theme_onSurface"
                        android:textSize="14sp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>