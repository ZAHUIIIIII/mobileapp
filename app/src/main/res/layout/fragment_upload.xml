<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_background">

    <!-- Header -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_primary"
        android:title="Cloud Sync"
        android:titleTextColor="@color/md_theme_onPrimary"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        app:titleCentered="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvNetworkStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Network: Checking..."
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceBodyMedium" />

        <TextView
            android:id="@+id/tvLastSync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last sync: Never"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceBodyMedium" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/md_theme_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                android:padding="20dp">

                    <TextView
                    android:id="@+id/tvDataSummary"
                    android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                    android:text="Courses: 0, Instances: 0, Unsynced: 0"
                    android:textColor="@color/md_theme_primary"
                    android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />

                <!-- Optional: RecyclerView for per-item sync status -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSyncStatus"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

                    <TextView
                    android:id="@+id/tvUploadResult"
                    android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/md_theme_primary"
                        android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:layout_marginTop="8dp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSync"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Start Sync"
                        android:textColor="@color/md_theme_onPrimary"
                        app:backgroundTint="@color/md_theme_primary"
                        app:cornerRadius="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRetry"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Retry Failed"
                        android:textColor="@color/md_theme_onPrimary"
                        app:backgroundTint="@color/md_theme_secondary"
                        app:cornerRadius="12dp"
                        android:visibility="gone" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancel"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:textColor="@color/md_theme_onPrimary"
                        app:backgroundTint="@color/md_theme_error"
                        app:cornerRadius="12dp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto Sync"
                        android:textColor="@color/md_theme_onSurfaceVariant"
                        android:textAppearance="?attr/textAppearanceBodyMedium" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchAutoSync"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
</LinearLayout>