<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with check icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check"
            app:tint="@color/success"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Class Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/success" />

    </LinearLayout>

    <!-- Course details card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Required fields grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Row 1: Day and Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Day"
                            android:textSize="12sp"
                            android:textColor="@color/muted_foreground"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvConfirmDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monday"
                            android:textSize="14sp"
                            android:textColor="@color/foreground" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textSize="12sp"
                            android:textColor="@color/muted_foreground"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvConfirmTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09:00"
                            android:textSize="14sp"
                            android:textColor="@color/foreground" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Row 2: Type and Duration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:textSize="12sp"
                            android:textColor="@color/muted_foreground"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvConfirmType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vinyasa Yoga"
                            android:textSize="14sp"
                            android:textColor="@color/foreground" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duration"
                            android:textSize="12sp"
                            android:textColor="@color/muted_foreground"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvConfirmDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60 minutes"
                            android:textSize="14sp"
                            android:textColor="@color/foreground" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Row 3: Capacity and Price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Capacity"
                            android:textSize="12sp"
                            android:textColor="@color/muted_foreground"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvConfirmCapacity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 people"
                            android:textSize="14sp"
                            android:textColor="@color/foreground" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textSize="12sp"
                            android:textColor="@color/muted_foreground"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvConfirmPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Â£15.00"
                            android:textSize="14sp"
                            android:textColor="@color/foreground" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Optional fields -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Difficulty -->
                <LinearLayout
                    android:id="@+id/layoutConfirmDifficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Difficulty"
                        android:textSize="12sp"
                        android:textColor="@color/muted_foreground"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvConfirmDifficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intermediate"
                        android:textSize="14sp"
                        android:textColor="@color/foreground" />

                </LinearLayout>

                <!-- Location -->
                <LinearLayout
                    android:id="@+id/layoutConfirmLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="12sp"
                        android:textColor="@color/muted_foreground"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvConfirmLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Studio A"
                        android:textSize="14sp"
                        android:textColor="@color/foreground" />

                </LinearLayout>

                <!-- Instructor -->
                <LinearLayout
                    android:id="@+id/layoutConfirmInstructor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instructor"
                        android:textSize="12sp"
                        android:textColor="@color/muted_foreground"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvConfirmInstructor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sarah Johnson"
                        android:textSize="14sp"
                        android:textColor="@color/foreground" />

                </LinearLayout>

                <!-- Description -->
                <LinearLayout
                    android:id="@+id/layoutConfirmDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="12sp"
                        android:textColor="@color/muted_foreground"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvConfirmDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A dynamic flow class focusing on breath and movement."
                        android:textSize="14sp"
                        android:textColor="@color/foreground" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout> 