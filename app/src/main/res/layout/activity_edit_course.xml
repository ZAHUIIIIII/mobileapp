<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:title="Edit Yoga Course"
        android:titleTextColor="?attr/colorOnPrimary"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:titleCentered="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:contentDescription="Loading indicator"
                android:importantForAccessibility="yes"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Yoga Course"
                        android:textAppearance="?attr/textAppearanceHeadlineMedium"
                        android:textColor="?attr/colorPrimary"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="5dp"/>

                    <!-- Course Name (moved to top) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCourseName"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Course Name"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:boxStrokeWidth="2dp"
                        app:endIconTint="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editCourseName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints="name"
                            android:contentDescription="Course name"
                            android:inputType="textPersonName"
                            android:padding="12dp"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="?attr/colorOnSurface" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Section: Schedule -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Schedule"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorPrimary"/>
<!--                        android:paddingTop="dp"-->
<!--                        android:paddingBottom="dp"/>-->

                    <!-- Days of Week Multi-Select -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilDaysOfWeek"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Days of Week"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:boxStrokeWidth="2dp"
                        app:endIconContentDescription="Select days of week"
                        app:endIconDrawable="@drawable/ic_calendar"
                        app:endIconMode="custom"
                        app:endIconTint="?attr/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDaysOfWeek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="none"
                            android:padding="12dp"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="?attr/colorOnSurface" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Time and Duration on the same row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="8dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilTime"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Time"
                            app:endIconMode="custom"
                            app:endIconDrawable="@drawable/ic_time"
                            app:endIconContentDescription="Pick time"
                            app:boxStrokeColor="?attr/colorPrimary"
                            app:boxStrokeWidth="2dp"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            app:hintTextColor="?attr/colorPrimary"
                            app:endIconTint="?attr/colorPrimary"
                            android:layout_marginBottom="4dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:contentDescription="Pick time"
                                android:focusable="false"
                                android:inputType="none"
                                android:textColor="?attr/colorOnSurface"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:padding="12dp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <Space
                            android:layout_width="8dp"
                            android:layout_height="wrap_content" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilDuration"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Duration (minutes)"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            app:endIconMode="custom"
                            app:endIconDrawable="@drawable/ic_duration"
                            app:endIconContentDescription="Select duration"
                            app:boxStrokeColor="?attr/colorPrimary"
                            app:boxStrokeWidth="2dp"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            app:hintTextColor="?attr/colorPrimary"
                            app:endIconTint="?attr/colorPrimary"
                            android:layout_marginBottom="4dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editDuration"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:focusable="false"
                                android:clickable="true"
                                android:contentDescription="Select duration in minutes"
                                android:textColor="?attr/colorOnSurface"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:padding="12dp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Section: Course Details -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Course Details"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorPrimary"/>

                    <!-- Type Dropdown -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="16dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Type"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            app:endIconMode="dropdown_menu"
                            android:contentDescription="Yoga type"
                            app:boxStrokeColor="?attr/colorPrimary"
                            app:boxStrokeWidth="2dp"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            app:hintTextColor="?attr/colorPrimary"
                            app:endIconTint="?attr/colorPrimary"
                            android:layout_marginBottom="4dp">
                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/autoType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:focusable="false"
                                android:clickable="true"
                                android:contentDescription="Yoga type"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:paddingVertical="12dp"
                                android:importantForAccessibility="yes"
                                android:textColor="?attr/colorOnSurface"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Capacity and Room Location on the same row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="16dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilCapacity"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Capacity"
                            app:endIconMode="custom"
                            app:endIconDrawable="@drawable/ic_capacity"
                            app:endIconContentDescription="Select capacity"
                            app:boxStrokeColor="?attr/colorPrimary"
                            app:boxStrokeWidth="2dp"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            app:hintTextColor="?attr/colorPrimary"
                            app:endIconTint="?attr/colorPrimary"
                            android:layout_marginBottom="4dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editCapacity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:maxLength="3"
                                android:contentDescription="Capacity"
                                android:textColor="?attr/colorOnSurface"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:padding="12dp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <Space
                            android:layout_width="8dp"
                            android:layout_height="wrap_content" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilRoomLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Room Location"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            app:endIconMode="dropdown_menu"
                            android:contentDescription="Room location"
                            app:boxStrokeColor="?attr/colorPrimary"
                            app:boxStrokeWidth="2dp"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            app:hintTextColor="?attr/colorPrimary"
                            app:endIconTint="?attr/colorPrimary"
                            android:layout_marginBottom="4dp">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/autoRoomLocation"
                                style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:contentDescription="Room location"
                                android:focusable="false"
                                android:importantForAccessibility="yes"
                                android:inputType="none"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:paddingVertical="12dp"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Price -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPrice"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Price (Â£)"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:boxStrokeWidth="2dp"
                        app:endIconTint="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:maxLength="6"
                            android:contentDescription="Price"
                            android:textColor="?attr/colorOnSurface"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:padding="8dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Description -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilDescription"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="Description"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:boxStrokeWidth="2dp"
                        app:endIconTint="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:contentDescription="Description"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:padding="12dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Buttons outside the card for clarity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewInstances"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="View class instances"
                    android:text="View Instances"
                    app:cornerRadius="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSave"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:contentDescription="Save course"
                        android:text="Save"
                        android:textColor="?attr/colorOnPrimary"
                        app:backgroundTint="?attr/colorPrimary"
                        app:cornerRadius="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancel"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:contentDescription="Cancel"
                        android:text="Cancel"
                        android:textColor="?attr/colorPrimary"
                        app:cornerRadius="12dp"
                        app:strokeColor="?attr/colorPrimary"
                        app:strokeWidth="2dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>