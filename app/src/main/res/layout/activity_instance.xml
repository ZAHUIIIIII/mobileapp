<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:title="Class Instances"
        android:titleTextColor="?attr/colorOnPrimary"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:titleCentered="true"/>

    <TextView
        android:id="@+id/tvCourseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textColor="?attr/colorOnSurface"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"
        android:contentDescription="Course name for instances"/>

    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_instances"
            app:tint="?attr/colorOnSurfaceVariant"
            android:contentDescription="No instances icon"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvEmptyInstances"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No class instances found for this course."
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textAlignment="center"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/instanceRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"
        android:contentDescription="List of class instances"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddInstance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Instance"
        android:layout_margin="16dp"
        app:cornerRadius="12dp"
        app:backgroundTint="?attr/colorPrimary"
        android:textColor="?attr/colorOnPrimary"
        android:contentDescription="Add new class instance"/>

</LinearLayout>