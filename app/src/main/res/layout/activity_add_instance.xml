<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:title="Add Class Instance"
        android:titleTextColor="@color/colorOnPrimary"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:titleCentered="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Class Instance"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="24dp"/>

                    <!-- Section: Session Details -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Session Details"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:paddingTop="0dp"
                        android:paddingBottom="12dp"/>

                    <!-- Course Spinner -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Course"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary"
                        android:paddingBottom="4dp"/>
                    <Spinner
                        android:id="@+id/spinnerCourse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="Select course for this session"
                        android:paddingBottom="16dp"/>

                    <!-- Day of Week Dropdown -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilDayOfWeek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Day of Week"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:endIconMode="dropdown_menu"
                        android:contentDescription="Pick day of week">
                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/autoDayOfWeek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:contentDescription="Pick day of week for this session"
                            android:textSize="16sp"
                            android:paddingVertical="12dp"
                            android:importantForAccessibility="yes"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Only days allowed by the selected course are shown."
                        android:textSize="12sp"
                        android:textColor="@color/colorTextSecondary"
                        android:paddingBottom="8dp"/>

                    <!-- Teacher Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Teacher Name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTeacher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:contentDescription="Teacher name for this session"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Required. Enter the teacher in charge of this session."
                        android:textSize="12sp"
                        android:textColor="@color/colorTextSecondary"
                        android:paddingBottom="8dp"/>

                    <!-- Comments -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Comments (Optional)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etComments"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:contentDescription="Comments for this session (optional)"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Optional. Add any notes for this session."
                        android:textSize="12sp"
                        android:textColor="@color/colorTextSecondary"
                        android:paddingBottom="8dp"/>

                    <!-- Submit Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Instance"
                        style="@style/Widget.MaterialComponents.Button"
                        app:backgroundTint="@color/colorPrimary"
                        app:cornerRadius="12dp"
                        android:textColor="@color/colorOnPrimary"
                        android:layout_marginTop="24dp"
                        android:contentDescription="Add this class instance"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:contentDescription="Loading indicator"
                android:importantForAccessibility="yes"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout> 