<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <!-- Modern Header with gradient background -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@drawable/header_gradient"
        android:elevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo/Icon and Title Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/primary_foreground_20"
                app:cardElevation="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_dashboard"
                    app:tint="@color/primary_foreground" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_page_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dashboard"
                    android:textAppearance="@style/TextAppearance.YogaCourse.H3"
                    android:textColor="@color/primary_foreground"
                    android:fontFamily="sans-serif-medium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tv_classes_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 classes"
                        android:textAppearance="@style/TextAppearance.YogaCourse.Label"
                        android:textColor="@color/primary_foreground_80" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" • "
                        android:textAppearance="@style/TextAppearance.YogaCourse.Label"
                        android:textColor="@color/primary_foreground_80" />

                    <TextView
                        android:id="@+id/tv_instances_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 instances"
                        android:textAppearance="@style/TextAppearance.YogaCourse.Label"
                        android:textColor="@color/primary_foreground_80" />

                    <TextView
                        android:id="@+id/tv_pending_sync"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" • 0 pending sync"
                        android:textAppearance="@style/TextAppearance.YogaCourse.Label"
                        android:textColor="@color/yellow_300"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <!-- Main Content Area with improved spacing -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation" />

    <!-- Enhanced Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        style="@style/Widget.YogaCourse.BottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>