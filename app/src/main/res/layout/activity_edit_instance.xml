<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:title="Edit Class Instance"
        android:titleTextColor="?attr/colorOnPrimary"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:titleCentered="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:contentDescription="Loading indicator"
                android:importantForAccessibility="yes"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Section: Course Information (Read-only) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Course Information"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorPrimary"
                        android:paddingBottom="12dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Course Name"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary"
                        android:layout_marginBottom="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tvCourseName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="false"
                            android:textColor="?attr/colorOnSurface"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:contentDescription="Course name for this session"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Days of Week"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary"
                        android:layout_marginBottom="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tvCourseDaysOfWeek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="false"
                            android:textColor="?attr/colorOnSurface"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:contentDescription="Days of week for the selected course"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Time Range"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary"
                        android:layout_marginBottom="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tvCourseTimeRange"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="false"
                            android:textColor="?attr/colorOnSurface"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:contentDescription="Time range for the selected course"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Room"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary"
                        android:layout_marginBottom="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tvCourseRoom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="false"
                            android:textColor="?attr/colorOnSurface"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:contentDescription="Room for the selected course"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="8dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Enrolled"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            app:boxStrokeColor="?attr/colorPrimary"
                            app:hintTextColor="?attr/colorPrimary"
                            android:layout_marginEnd="4dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tvEnrolled"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:focusable="false"
                                android:clickable="false"
                                android:textColor="?attr/colorOnSurface"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:contentDescription="Number of enrolled students"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Capacity"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            app:boxStrokeColor="?attr/colorPrimary"
                            app:hintTextColor="?attr/colorPrimary"
                            android:layout_marginStart="4dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tvCapacity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:focusable="false"
                                android:clickable="false"
                                android:textColor="?attr/colorOnSurface"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:contentDescription="Maximum capacity"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Section: Instance Details (Editable) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instance Details"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorPrimary"
                        android:paddingBottom="12dp"/>

                    <!-- Date -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Date"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_calendar"
                        app:endIconContentDescription="Pick date"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary"
                        app:endIconTint="?attr/colorPrimary"
                        android:layout_marginBottom="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:textColor="?attr/colorOnSurface"
                            android:contentDescription="Pick date for this session"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Teacher Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilTeacher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Teacher Name"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary"
                        android:layout_marginBottom="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTeacher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:textColor="?attr/colorOnSurface"
                            android:contentDescription="Teacher name for this session"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Comments -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilComments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Comments (Optional)"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary"
                        android:layout_marginBottom="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etComments"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:textColor="?attr/colorOnSurface"
                            android:contentDescription="Comments for this session (optional)"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Submit Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUpdateInstance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Update Instance"
                    style="@style/Widget.Material3.Button"
                    app:backgroundTint="?attr/colorPrimary"
                    app:cornerRadius="12dp"
                    android:textColor="?attr/colorOnPrimary"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Update this class instance"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDeleteInstance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delete Instance"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:strokeColor="?attr/colorError"
                    app:strokeWidth="2dp"
                    app:cornerRadius="12dp"
                    android:textColor="?attr/colorError"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Delete this class instance"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>