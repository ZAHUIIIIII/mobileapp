<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:orientation="vertical"
    android:background="@android:color/white">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:title="Add Yoga Course"
        android:titleTextColor="@color/colorOnPrimary"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:titleCentered="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:contentDescription="Loading indicator"
                android:importantForAccessibility="yes"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Yoga Course"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="24dp"/>

                    <!-- Course Name (moved to top) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCourseName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Course Name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/colorAccent"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:hintTextColor="@color/colorAccent"
                        app:endIconTint="@color/colorAccent"
                        android:layout_marginBottom="4dp"
                        helperText="Course name is required">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editCourseName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:autofillHints="name"
                            android:contentDescription="Course name"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="16sp"
                            android:padding="4dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Section: Schedule -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Schedule"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:paddingTop="24dp"
                        android:paddingBottom="12dp"/>

                    <!-- Days of Week Multi-Select -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilDaysOfWeek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Days of Week"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_day_of_week"
                        app:endIconContentDescription="Pick days"
                        app:boxStrokeColor="@color/colorAccent"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:hintTextColor="@color/colorAccent"
                        app:endIconTint="@color/colorAccent"
                        android:layout_marginBottom="4dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editDaysOfWeek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:contentDescription="Pick days of week"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="16sp"
                            android:padding="4dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="12sp" />

                    <!-- Time and Duration on the same row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="4dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilTime"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                        android:hint="Time"
                        app:endIconMode="custom"
                        app:endIconDrawable="@android:drawable/ic_menu_recent_history"
                            app:endIconContentDescription="Pick time"
                            app:boxStrokeColor="@color/colorAccent"
                            app:boxStrokeWidth="2dp"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            app:hintTextColor="@color/colorAccent"
                            app:endIconTint="@color/colorAccent"
                            android:layout_marginBottom="4dp"
                            helperText="Time is required">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:contentDescription="Pick time"
                            android:focusable="false"
                            android:inputType="none"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="16sp"
                                android:padding="4dp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                        <Space
                            android:layout_width="8dp"
                            android:layout_height="wrap_content" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilDuration"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Duration (minutes)"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:endIconMode="custom"
                            app:endIconDrawable="@drawable/ic_duration"
                            app:endIconContentDescription="Select duration"
                            app:boxStrokeColor="@color/colorAccent"
                            app:boxStrokeWidth="2dp"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            app:hintTextColor="@color/colorAccent"
                            app:endIconTint="@color/colorAccent"
                            android:layout_marginBottom="4dp"
                            helperText="Duration must be 1-60">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editDuration"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:focusable="false"
                                android:clickable="true"
                                android:contentDescription="Select duration in minutes"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="16sp"
                                android:padding="4dp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Section: Course Details -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Course Details"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:paddingTop="24dp"
                        android:paddingBottom="12dp"/>

                    <!-- Type Dropdown -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="4dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Type"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:endIconMode="dropdown_menu"
                            android:contentDescription="Yoga type"
                            app:boxStrokeColor="@color/colorAccent"
                            app:boxStrokeWidth="2dp"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            app:hintTextColor="@color/colorAccent"
                            app:endIconTint="@color/colorAccent"
                            android:layout_marginBottom="4dp"
                            helperText="Type is required">
                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                style="@style/Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox"
                                android:id="@+id/autoType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:focusable="false"
                                android:clickable="true"
                                android:contentDescription="Yoga type"
                                android:textSize="16sp"
                                android:paddingVertical="12dp"
                                android:importantForAccessibility="yes"
                                android:textColor="@color/colorTextPrimary"
                                android:padding="4dp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Capacity and Room Location on the same row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="4dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilCapacity"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                        android:hint="Capacity"
                        app:endIconMode="custom"
                            app:endIconDrawable="@drawable/ic_capacity"
                            app:endIconContentDescription="Select capacity"
                            app:boxStrokeColor="@color/colorAccent"
                            app:boxStrokeWidth="2dp"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            app:hintTextColor="@color/colorAccent"
                            app:endIconTint="@color/colorAccent"
                            android:layout_marginBottom="4dp"
                            helperText="Capacity must be a valid number">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editCapacity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="3"
                                android:contentDescription="Capacity"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="16sp"
                                android:padding="4dp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <Space
                            android:layout_width="8dp"
                            android:layout_height="wrap_content" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilRoomLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Room Location"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:endIconMode="dropdown_menu"
                            android:contentDescription="Room location"
                            app:boxStrokeColor="@color/colorAccent"
                            app:boxStrokeWidth="2dp"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            app:hintTextColor="@color/colorAccent"
                            app:endIconTint="@color/colorAccent"
                            android:layout_marginBottom="4dp"
                            helperText="Room location is required">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/autoRoomLocation"
                                style="@style/Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:contentDescription="Room location"
                                android:focusable="false"
                                android:importantForAccessibility="yes"
                                android:inputType="none"
                                android:paddingVertical="12dp"
                                android:textSize="16sp"
                                android:textColor="@color/colorTextPrimary"
                                android:padding="4dp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Price -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Price ($)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/colorAccent"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:hintTextColor="@color/colorAccent"
                        app:endIconTint="@color/colorAccent"
                        android:layout_marginBottom="4dp"
                        helperText="Price must be a valid number">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:maxLength="6"
                            android:contentDescription="Price"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="16sp"
                            android:padding="4dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Description -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Description"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="4dp"
                        helperText=" "
                        app:boxStrokeColor="@color/colorSecondary"
                        app:boxStrokeWidth="1dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:hintTextColor="@color/colorSecondary"
                        app:endIconTint="@color/colorSecondary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:contentDescription="Description"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="16sp"
                            android:padding="4dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Buttons outside the card for clarity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:contentDescription="Save course"
                    android:text="Save"
                    android:textColor="@color/colorOnPrimary"
                    app:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:contentDescription="Cancel"
                    android:text="Cancel"
                    android:textColor="@color/colorAccent"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/colorAccent"
                    app:strokeWidth="2dp" />
            </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>
